{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@img/*": [
        "public/img/*"
      ],
      "@app/*": [
        "app/*"
      ],
      "@components/*": [
        "app/_components/*"
      ],
      "@layouts/*": [
        "app/_layouts/*"
      ],
      "@lib/*": [
        "app/_lib/*"
      ],
      "@context/*": [
        "app/_context/*"
      ],
      "@hooks/*": [
        "app/_hooks/*"
      ],
      "@features/*": [
        "app/_features/*"
      ],
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}